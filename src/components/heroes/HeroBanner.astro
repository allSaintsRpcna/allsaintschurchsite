---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/group-photo-3.jpg";
---

<section class="relative h-[60vh] min-h-[400px] w-full overflow-hidden">
  <Image
    src={heroImage}
    alt="All Saints Reformed Presbyterian Church congregation"
    class="absolute inset-0 w-full h-full object-cover"
    widths={[640, 1024, 1536, 2048]}
    sizes="100vw"
  />
  <div class="absolute inset-0 bg-indigo-950/70"></div>
  <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4">
    <div class="w-16 h-px bg-white/60 mb-6"></div>
    <h1 class="text-3xl md:text-5xl font-bold mb-4">All Saints Reformed Presbyterian Church</h1>
    <p class="text-base md:text-lg text-white/80 max-w-lg">
      Faithfully proclaiming the gospel and building one another up in the grace of our Lord Jesus Christ.
    </p>
    <div class="w-16 h-px bg-white/60 mt-6"></div>
  </div>
</section>
