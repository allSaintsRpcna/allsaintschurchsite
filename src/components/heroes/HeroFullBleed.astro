---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/group-photo-1.jpg";
import Button from "../Button.astro";
import logo from "../../assets/images/allsaints-logo2.png";
---

<section class="relative h-screen w-full overflow-hidden">
  <Image
    src={heroImage}
    alt="All Saints Reformed Presbyterian Church congregation"
    class="absolute inset-0 w-full h-full object-cover"
    widths={[640, 1024, 1536, 2048]}
    sizes="100vw"
  />
  <div class="absolute inset-0 bg-black/50"></div>
  <div
    class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4"
  >
    <p
      class="text-sm md:text-base uppercase tracking-[0.3em] mb-4 text-white/80"
    >
      Welcome to
    </p>
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
      All Saints Reformed<br />Presbyterian Church
    </h1>
    <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl">
      A community united in faith, growing together in grace and truth.
    </p>
    <Button href="/about">Learn More</Button>
  </div>
</section>
