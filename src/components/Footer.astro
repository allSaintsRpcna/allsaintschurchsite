---
import logo from "../assets/images/allsaints-logo2.png";
import { Image } from "astro:assets";

const year = new Date().getFullYear();

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/beliefs", label: "Beliefs" },
  { href: "/leadership", label: "Leadership" },
  { href: "/sermons", label: "Sermons" },
  { href: "/contact", label: "Contact" },
];

const socialLinks = [
  { href: "https://facebook.com", icon: "fa-brands fa-facebook-f", label: "Facebook" },
  { href: "https://instagram.com", icon: "fa-brands fa-instagram", label: "Instagram" },
  { href: "https://youtube.com", icon: "fa-brands fa-youtube", label: "YouTube" },
  { href: "#", icon: "fa-solid fa-podcast", label: "Podcast" },
];
---

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>

<footer class="bg-stone-900 text-stone-300 mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 md:gap-8">
      <!-- Logo & About -->
      <div class="md:col-span-1">
        <a href="/">
          <Image
            src={logo}
            alt="All Saints Reformed Presbyterian Church"
            width={200}
            height={200}
            class="h-14 w-auto mb-4"
          />
        </a>
        <p class="text-sm text-stone-400 leading-relaxed">
          A community united in faith, growing together in grace and truth.
        </p>
      </div>

      <!-- Worship Times -->
      <div>
        <h3 class="text-sm uppercase tracking-[0.2em] text-white font-semibold mb-4">Worship Times</h3>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-stone-400">First Service</p>
            <p class="text-stone-200 font-medium">2:00 PM</p>
          </div>
          <div>
            <p class="text-sm text-stone-400">Second Service</p>
            <p class="text-stone-200 font-medium">3:45 PM</p>
          </div>
        </div>
      </div>

      <!-- Location & Contact -->
      <div>
        <h3 class="text-sm uppercase tracking-[0.2em] text-white font-semibold mb-4">Location & Contact</h3>
        <div class="space-y-3">
          <p class="text-sm text-stone-300 leading-relaxed">
            1053 E Sixth St<br />
            Ontario, CA 91764
          </p>
          <a
            href="mailto:info@allsaintsreformed.org"
            class="text-sm text-stone-300 hover:text-white transition-colors"
          >
            info@allsaintsreformed.org
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm uppercase tracking-[0.2em] text-white font-semibold mb-4">Navigation</h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-stone-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-stone-700 mt-10 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-stone-500">
        &copy; {year} All Saints Reformed Presbyterian Church. All rights reserved.
      </p>
      <div class="flex gap-4">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.label}
            class="text-stone-500 hover:text-white transition-colors text-lg"
          >
            <i class={social.icon}></i>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
