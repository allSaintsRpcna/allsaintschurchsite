---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "inline-block bg-white text-gray-900 px-8 py-3 text-sm font-semibold uppercase tracking-wider hover:bg-gray-100 transition-colors",
    className,
  ]}
>
  <slot />
</a>
