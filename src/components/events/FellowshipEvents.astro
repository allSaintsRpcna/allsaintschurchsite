---
import { Image } from "astro:assets";
import bibleStudy from "../../assets/images/bible-study-1.jpg";
import mensStudy from "../../assets/images/mens-study-1.jpg";
import womensStudy from "../../assets/images/womens-study-2.jpg";

const events = [
  {
    title: "Wednesday Night Bible Study",
    schedule: "Every Wednesday",
    time: "7:00 PM",
    location: "Via Zoom",
    image: bibleStudy,
    note: null,
  },
  {
    title: "Men's Book Club",
    schedule: "1st Saturday of the month",
    time: "10:00 AM",
    location: "Contact us for location",
    image: mensStudy,
    note: "Brunch served after",
  },
  {
    title: "Ladies Book Club",
    schedule: "3rd Saturday of the month",
    time: "10:00 AM",
    location: "Contact us for location",
    image: womensStudy,
    note: "Brunch served after",
  },
];
---

<section class="py-16 md:py-24 bg-stone-800">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-3 text-center">
      Fellowship &amp; Events
    </h2>
    <p class="text-stone-400 text-center mb-10">Join us throughout the week</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {events.map((event) => (
        <div class="border border-stone-600 rounded-lg overflow-hidden flex flex-col">
          <Image
            src={event.image}
            alt={event.title}
            class="w-full h-48 object-cover"
            widths={[400, 800]}
            sizes="(max-width: 768px) 100vw, 33vw"
          />
          <div class="p-6 flex flex-col">
            <h3 class="text-lg font-bold text-white mb-2">{event.title}</h3>
            <p class="text-sm text-stone-300">{event.schedule}</p>
            <p class="text-sm text-stone-300 font-semibold mt-1">{event.time}</p>
            <p class="text-sm text-stone-400 mt-3">{event.location}</p>
            {event.note && (
              <p class="text-sm text-stone-500 italic mt-1">{event.note}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
