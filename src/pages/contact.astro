---
import PageLayout from "../layouts/PageLayout.astro";
import WorshipSideBySide from "../components/worship/WorshipSideBySide.astro";
---

<PageLayout transparentHeader>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />

  <!-- Hero -->
  <section class="pt-32 pb-20 md:pt-40 md:pb-28 bg-stone-800 text-center">
    <div class="max-w-3xl mx-auto px-4">
      <p class="text-sm uppercase tracking-[0.3em] text-white/60 mb-4">Get in Touch</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Contact Us</h1>
      <p class="text-lg text-stone-300 leading-relaxed">
        We'd love to hear from you. Whether you have questions, need prayer,
        or want to visit, don't hesitate to reach out.
      </p>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-5 gap-12 md:gap-16">
        <!-- Form -->
        <div class="md:col-span-3">
          <h2 class="text-2xl font-bold text-stone-900 mb-6">Send Us a Message</h2>
          <form class="space-y-5">
            <div>
              <label for="name" class="block text-sm font-medium text-stone-700 mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full rounded border border-stone-300 px-4 py-2.5 text-stone-900 placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-transparent transition"
                placeholder="Your name"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-stone-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded border border-stone-300 px-4 py-2.5 text-stone-900 placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-transparent transition"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-stone-700 mb-1">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full rounded border border-stone-300 px-4 py-2.5 text-stone-900 placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-transparent transition"
                placeholder="Subject"
              />
            </div>

            <fieldset>
              <legend class="block text-sm font-medium text-stone-700 mb-2">Reason for Contact</legend>
              <div class="flex flex-wrap gap-4">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input
                    type="radio"
                    name="reason"
                    value="visiting"
                    class="accent-stone-800"
                    checked
                  />
                  <span class="text-sm text-stone-700">Interested in Visiting</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input
                    type="radio"
                    name="reason"
                    value="prayer"
                    class="accent-stone-800"
                  />
                  <span class="text-sm text-stone-700">Prayer Request</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input
                    type="radio"
                    name="reason"
                    value="other"
                    class="accent-stone-800"
                  />
                  <span class="text-sm text-stone-700">Other</span>
                </label>
              </div>
            </fieldset>

            <div>
              <label for="message" class="block text-sm font-medium text-stone-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full rounded border border-stone-300 px-4 py-2.5 text-stone-900 placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-transparent transition resize-vertical"
                placeholder="Your message..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="inline-block text-sm font-semibold uppercase tracking-wider text-white bg-stone-800 rounded px-8 py-3 hover:bg-stone-700 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="md:col-span-2">
          <h2 class="text-2xl font-bold text-stone-900 mb-6">Contact Info</h2>
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-envelope text-stone-400 mt-1"></i>
              <div>
                <p class="text-sm uppercase tracking-wider text-stone-500 mb-1">Email</p>
                <a
                  href="mailto:info@allsaintsreformed.org"
                  class="text-stone-800 hover:text-stone-600 transition-colors"
                >
                  info@allsaintsreformed.org
                </a>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-location-dot text-stone-400 mt-1"></i>
              <div>
                <p class="text-sm uppercase tracking-wider text-stone-500 mb-1">Location</p>
                <p class="text-stone-800">
                  1053 E Sixth St<br />
                  Ontario, CA 91764
                </p>
              </div>
            </div>

            <!-- Worship Times -->
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-clock text-stone-400 mt-1"></i>
              <div>
                <p class="text-sm uppercase tracking-wider text-stone-500 mb-1">Worship Times</p>
                <p class="text-stone-800">1st Service: 2:00 PM</p>
                <p class="text-stone-800">2nd Service: 3:45 PM</p>
              </div>
            </div>

            <!-- Social Links -->
            <div>
              <p class="text-sm uppercase tracking-wider text-stone-500 mb-3">Follow Us</p>
              <div class="flex gap-4">
                <a
                  href="https://facebook.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Facebook"
                  class="w-10 h-10 rounded-full bg-stone-100 flex items-center justify-center text-stone-500 hover:bg-stone-800 hover:text-white transition-colors"
                >
                  <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a
                  href="https://instagram.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Instagram"
                  class="w-10 h-10 rounded-full bg-stone-100 flex items-center justify-center text-stone-500 hover:bg-stone-800 hover:text-white transition-colors"
                >
                  <i class="fa-brands fa-instagram"></i>
                </a>
                <a
                  href="https://youtube.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="YouTube"
                  class="w-10 h-10 rounded-full bg-stone-100 flex items-center justify-center text-stone-500 hover:bg-stone-800 hover:text-white transition-colors"
                >
                  <i class="fa-brands fa-youtube"></i>
                </a>
                <a
                  href="#"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Podcast"
                  class="w-10 h-10 rounded-full bg-stone-100 flex items-center justify-center text-stone-500 hover:bg-stone-800 hover:text-white transition-colors"
                >
                  <i class="fa-solid fa-podcast"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <WorshipSideBySide bgClass="bg-stone-100" />
</PageLayout>
