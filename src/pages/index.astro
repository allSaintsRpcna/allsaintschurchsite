---
import PageLayout from "../layouts/PageLayout.astro";
import HeroFullBleed from "../components/heroes/HeroFullBleed.astro";
import WorshipSideBySide from "../components/worship/WorshipSideBySide.astro";
import RecentSermons from "../components/sermons/RecentSermons.astro";
import FellowshipEvents from "../components/events/FellowshipEvents.astro";
---

<PageLayout transparentHeader>
  <HeroFullBleed />

  <WorshipSideBySide />

  <RecentSermons />

  <FellowshipEvents />

  <section class="py-16 md:py-20 bg-white text-center">
    <div class="max-w-2xl mx-auto px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-stone-900 mb-3">
        Have Questions or Need Prayer?
      </h2>
      <p class="text-stone-600 mb-6">
        We'd love to hear from you. Reach out anytime.
      </p>
      <a
        href="/contact"
        class="inline-block text-sm font-semibold uppercase tracking-wider text-white bg-stone-800 rounded px-8 py-3 hover:bg-stone-700 transition-colors"
      >
        Contact Us
      </a>
    </div>
  </section>
</PageLayout>
