---

<PageLayout transparentHeader>
  <!-- Hero -->
  <section class="pt-32 pb-20 md:pt-40 md:pb-28 bg-stone-800 text-center">
    <div class="max-w-3xl mx-auto px-4">
      <p class="text-sm uppercase tracking-[0.3em] text-white/60 mb-4">Listen & Learn</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Sermons</h1>
      <p class="text-lg text-stone-300 leading-relaxed">
        Hear the faithful preaching of God's word from the pulpit of All Saints
        Reformed Presbyterian Church.
      </p>
    </div>
  </section>

  <!-- Featured Sermons -->
  <section class="py-16 md:py-24 bg-stone-50">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm uppercase tracking-[0.3em] text-stone-400 mb-3 text-center">Recommended</p>
      <h2 class="text-3xl md:text-4xl font-bold text-stone-900 mb-10 text-center">
        Featured Sermons
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {featuredSermons.map((sermon) => (
          <div class="rounded-lg shadow overflow-hidden flex flex-col">
            <div class="bg-indigo-50 p-5">
              <p class="text-xs uppercase tracking-wider text-indigo-700">{sermon.series}</p>
              <h3 class="font-bold text-stone-900 text-lg leading-snug line-clamp-2 mt-1" title={sermon.title}>
                {sermon.title}
              </h3>
              <p class="text-sm text-indigo-800/70 mt-1.5">
                {sermon.passage}
              </p>
            </div>
            <div class="bg-white px-5 py-3 flex-1 flex flex-col">
              <p class="text-sm text-stone-400">
                {sermon.day} &middot; {sermon.date} &middot; {sermon.duration} min
              </p>
              <div class="mt-auto pt-3 flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <img
                    src={sermon.imageUrl}
                    alt={sermon.speaker}
                    class="w-6 h-6 rounded-full object-cover"
                  />
                  <span class="text-xs text-stone-400">{sermon.speaker}</span>
                </div>
                <a
                  href="#"
                  class="text-sm font-semibold uppercase tracking-wider text-stone-900 border border-stone-300 rounded px-4 py-1.5 hover:bg-stone-100 transition-colors"
                >
                  Listen
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sermon Series -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm uppercase tracking-[0.3em] text-stone-400 mb-3 text-center">Browse by Series</p>
      <h2 class="text-3xl md:text-4xl font-bold text-stone-900 mb-10 text-center">
        Sermon Series
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        {sermonSeries.map((series) => (
          <a href={series.href} class="group relative rounded-lg overflow-hidden">
            <div class="aspect-[16/9] overflow-hidden">
              <Image
                src={series.image}
                alt=""
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                widths={[400, 800]}
                sizes="(max-width: 768px) 100vw, 33vw"
              />
            </div>
            <div class="relative -mt-8 mx-3 mb-3 rounded-lg bg-white/80 backdrop-blur-md p-5 shadow-lg">
              <h3 class="text-lg font-bold text-stone-900 mb-1">{series.title}</h3>
              <p class="text-sm text-stone-600 leading-relaxed mb-3">{series.description}</p>
              <span class="text-sm font-semibold text-stone-400 group-hover:text-stone-700 transition-colors">
                View Series &rarr;
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Sermons -->
  <section class="py-16 md:py-24 bg-stone-100">
