---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout>
  <section class="py-20 md:py-28 bg-stone-800 text-center">
    <div class="max-w-3xl mx-auto px-4">
      <p class="text-sm uppercase tracking-[0.3em] text-white/60 mb-4">Our Church</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Leadership</h1>
      <p class="text-lg text-stone-300 leading-relaxed">
        Meet the elders and deacons who serve All Saints Reformed Presbyterian Church.
      </p>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-3xl mx-auto px-4">
      <p class="text-stone-500 italic">Content coming soon.</p>
    </div>
  </section>
</PageLayout>
